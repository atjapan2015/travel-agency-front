apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: ta-front-green
  labels:
    run: ta-front-green
spec:
  replicas: 1
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      labels:
        run: ta-front-green
    spec:
      containers:
      - image: $OKE_REPOSITORY/$WERCKER_APPLICATION_NAME:$WERCKER_GIT_BRANCH-$WERCKER_GIT_COMMIT
        #imagePullPolicy: IfNotPresent 
        imagePullPolicy: Always 
        name: ta-front-green
        ports:
        - containerPort: 8000 
          protocol: TCP
      restartPolicy: Always
      imagePullSecrets:
        - name: ocirsecret
---
apiVersion: v1
kind: Service
metadata:
  name: ta-front-green-svc
  #spec:
  #  type: NodePort
  #  ports:
  #  - name: http
  #    port: 9004
  #    targetPort: 8000
  #    nodePort: 30008
  #    protocol: TCP
  #  selector:
  #    run: ta-front-green
spec:
  type: ClusterIP
  selector:
    run: ta-front-green 
  ports:
    - port: 9004
      targetPort: 8000
---
apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: ta-front-green-ing
  annotations:
    kubernetes.io/ingress.class: 'nginx'
    ingress.kubernetes.io/add-base-url: 'true'
    ingress.kubernetes.io/rewrite-target: /
spec:
  rules:
  - http:
      paths:
      - path: /travel-green/
        backend:
          serviceName: ta-front-green-svc
          servicePort: 9004
